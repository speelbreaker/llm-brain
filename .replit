modules = ["python-3.11"]
[agent]
expertMode = true
integrations = ["python_openai_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Options Trading Agent"

[[workflows.workflow]]
name = "Options Trading Agent"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn src.web_app:app --host 0.0.0.0 --port 5000"
waitForPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["uvicorn", "src.web_app:app", "--host", "0.0.0.0", "--port", "5000"]
ignorePorts = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33027
externalPort = 3000

[[ports]]
localPort = 34221
externalPort = 3001

[userenv]

[userenv.shared]
DRY_RUN = "false"
LLM_ENABLED = "true"
DEFAULT_ORDER_SIZE = "0.1"
MAX_EXPIRY_EXPOSURE = "0.1"
SAVE_TRAINING_DATA = "true"
TRAINING_MODE = "true"
SYNTHETIC_IV_MULTIPLIER = "0.62"
