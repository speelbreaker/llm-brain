modules = ["python-3.11"]
[agent]
expertMode = true
integrations = ["python_openai_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Options Trading Agent"

[[workflows.workflow]]
name = "Options Trading Agent"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5000

[deployment]
deploymentTarget = "gce"
run = ["python", "agent_loop.py"]
ignorePorts = true

[[ports]]
localPort = 5000
externalPort = 80

[userenv]

[userenv.shared]
DRY_RUN = "false"
LLM_ENABLED = "false"
DEFAULT_ORDER_SIZE = "0.1"
MAX_EXPIRY_EXPOSURE = "0.1"
