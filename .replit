modules = ["python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["python_openai_ai_integrations:1.0.0", "github:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["arrow-cpp", "glibcLocales", "libxcrypt", "pkg-config", "xsimd"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Options Trading Agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Deribit Data Harvester"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Review Bot"

[[workflows.workflow]]
name = "Options Trading Agent"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn src.web_app:app --host 0.0.0.0 --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Deribit Data Harvester"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m scripts.data_harvester"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Telegram Review Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m agent.telegram_bot"

[workflows.workflow.metadata]
outputType = "console"

[deployment]
deploymentTarget = "autoscale"
run = ["uvicorn", "src.web_app:app", "--host", "0.0.0.0", "--port", "5000"]
ignorePorts = true

[[ports]]
localPort = 5000
externalPort = 80

[userenv]

[userenv.shared]
DRY_RUN = "false"
LLM_ENABLED = "true"
DEFAULT_ORDER_SIZE = "0.1"
MAX_EXPIRY_EXPOSURE = "0.1"
SAVE_TRAINING_DATA = "true"
TRAINING_MODE = "true"
SYNTHETIC_IV_MULTIPLIER = "0.62"
HARVESTER_INTERVAL_MINUTES = "5"
